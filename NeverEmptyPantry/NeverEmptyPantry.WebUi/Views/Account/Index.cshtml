@using NeverEmptyPantry.Common.Models.Identity
@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title.</h2>

<table class="table table-hover table-condensed">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Title</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr onclick="goToLocation('@Url.Action("Profile", "Account", new {email = user.Email})')">
                <th>@user.FirstName</th>
                <th>@user.LastName</th>
                <th>@user.Email</th>
                <th>@user.Title</th>
                <th>@user.PhoneNumber</th>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_GoToLocationScriptPartial");}
}