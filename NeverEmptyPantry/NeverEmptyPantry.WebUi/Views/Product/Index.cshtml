@model IEnumerable<ProductViewModel>
<h4>Product Catalog.</h4>
<p>
    <a asp-action="Create">Create New</a>
</p>
@if (ViewBag.Error != null)
{
    <p>
        @ViewBag.Error
    </p>
}
<table class="table table-hover table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedDateTime)
            </th>
            @if (User.IsInRole("Administrator"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (!item.Active && !User.IsInRole("Administrator"))
            {
                continue;
            }
            <tr onclick="goToLocation('@Url.Action("Details", "Product", new { productId = item.Id })')">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedDateTime)
                </td>
                @if (User.IsInRole("Administrator"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                }
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Vote" asp-controller="Product" asp-route-id="@item.Id">Vote</a> @:|
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-controller="Product" asp-area="" asp-route-productId="@item.Id">Edit</a> @:|
                        <a asp-area="" asp-controller="Product" asp-action="Remove" asp-route-productId="@item.Id">Delete</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>